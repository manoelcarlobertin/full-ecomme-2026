<div class="min-h-screen bg-zinc-50 dark:bg-zinc-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">

    <div class="mb-6 flex items-center justify-between">
      <h1 class="text-2xl font-bold text-zinc-900 dark:text-white">Detalhes do Pedido #<%= @order.id %></h1>

      <div class="flex items-center gap-4">
        <% if @order.cancellable? %>
          <%= button_to "Cancelar Pedido", cancel_order_path(@order), 
                method: :patch, 
                data: { turbo_confirm: "Tem certeza que deseja cancelar?" },
                class: "px-4 py-2 border border-red-300 dark:border-red-800 text-sm font-medium rounded-md text-red-700 dark:text-red-400 bg-white dark:bg-zinc-800 hover:bg-red-50 dark:hover:bg-red-900/20 focus:outline-none transition" %>
        <% end %>

        <%= turbo_stream_from @order %>

        <h1 class="text-2xl font-bold mb-4">Pedido #<%= @order.id %></h1>

        <%= render "checkout/payment_button", order: @order %>

        <%= link_to "Voltar", orders_path, class: "text-sm text-blue-600 hover:text-blue-500" %>
      </div>

      <div class="bg-white dark:bg-zinc-800 shadow rounded-lg overflow-hidden border border-zinc-200 dark:border-zinc-700">
        <div class="px-4 py-5 sm:px-6 border-b border-zinc-200 dark:border-zinc-700">
          <h3 class="text-lg leading-6 font-medium text-zinc-900 dark:text-white">Itens do Pedido</h3>
          <p class="mt-1 max-w-2xl text-sm text-zinc-500 dark:text-zinc-400">
            Realizado em <%= l(@order.created_at, format: :long) %>
          </p>
        </div>
        <ul class="divide-y divide-zinc-200 dark:divide-zinc-700">
          <% @order.order_items.includes(:product).each do |item| %>
            <li class="px-4 py-4 sm:px-6 flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="h-12 w-12 rounded bg-zinc-200 dark:bg-zinc-700 overflow-hidden flex-shrink-0">
                  <% if item.product.image.attached? %>
                    <%= image_tag item.product.image, class: "h-full w-full object-cover" %>
                  <% end %>
                </div>
                <div>
                  <p class="text-sm font-medium text-zinc-900 dark:text-white"><%= item.product.name %></p>
                  <p class="text-xs text-zinc-500 dark:text-zinc-400">Quantidade: <%= item.quantity %></p>
                </div>
              </div>
              <div class="text-sm font-semibold text-zinc-900 dark:text-white">
                <%= number_to_currency(item.payed_price, unit: "R$ ", separator: ",", delimiter: ".") %>
              </div>
            </li>
          <% end %>
        </ul>
        <div class="px-4 py-4 sm:px-6 bg-zinc-50 dark:bg-zinc-900 flex justify-between items-center">
          <span class="text-base font-medium text-zinc-900 dark:text-white">Total Pago</span>
          <span class="text-xl font-bold text-blue-600 dark:text-blue-400">
            <%= number_to_currency(@order.order_items.sum(:payed_price), unit: "R$ ", separator: ",", delimiter: ".") %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>