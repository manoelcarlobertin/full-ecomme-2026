<div class="min-h-screen bg-zinc-50 dark:bg-zinc-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold text-zinc-900 dark:text-white mb-8">Meus Pedidos</h1>

    <% if @orders.any? %>
    <div class="bg-white dark:bg-zinc-800 shadow overflow-hidden sm:rounded-md">
      <ul role="list" class="divide-y divide-zinc-200 dark:divide-zinc-700">
        <% @orders.each do |order| %>
        <li>
          <%= link_to order_path(order), class: "block hover:bg-zinc-50 dark:hover:bg-zinc-700/50 transition duration-150 ease-in-out" do %>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">

              <div class="flex items-center gap-3">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ...">
                  <%= order.status.humanize %>
                </span>

                <% if order.cancellable? %>
                  <%= button_to "Cancelar", cancel_order_path(order), 
                    method: :patch, 
                    data: { turbo_confirm: "Tem certeza que deseja cancelar este pedido?" },
                    class: "text-xs font-medium text-red-600 hover:text-red-500 dark:text-red-400 dark:hover:text-red-300 transition underline decoration-transparent hover:decoration-red-500 underline-offset-2" %>
                <% end %>
              </div>
              
              <p class="text-sm font-medium text-blue-600 dark:text-blue-400 truncate">
                Pedido #<%= order.id %>
              </p>
              <div class="ml-2 flex-shrink-0 flex">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                              <%= case order.status
                                  when 'waiting_payment' then 'bg-yellow-100 text-yellow-800'
                                  when 'shipped' then 'bg-blue-100 text-blue-800'
                                  when 'delivered' then 'bg-green-100 text-green-800'
                                  when 'canceled' then 'bg-red-100 text-red-800'
                                  else 'bg-gray-100 text-gray-800'
                                  end %>">
                  <%= order.status.humanize %>
                </span>
              </div>
            </div>
            <div class="mt-2 sm:flex sm:justify-between">
              <div class="sm:flex">
                <p class="flex items-center text-sm text-zinc-500 dark:text-zinc-400">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <%= l(order.created_at, format: :short) %>
                </p>
              </div>
              <div class="mt-2 flex items-center text-sm text-zinc-500 dark:text-zinc-400 sm:mt-0">
                <p>
                  Total: <span class="font-semibold text-zinc-900 dark:text-white"><%= number_to_currency(order.order_items.sum(:payed_price), unit: "R$ ", separator: ",", delimiter: ".") %></span>
                </p>
              </div>
            </div>
          </div>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
    <% else %>
    <div class="text-center py-20">
      <p class="text-zinc-500 dark:text-zinc-400 text-lg">Você ainda não fez nenhum pedido.</p>
      <div class="mt-6">
        <%= link_to "Ir as compras", root_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
      </div>
    </div>
    <% end %>
  </div>
</div>