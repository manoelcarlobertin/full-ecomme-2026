<%# 
  Variáveis Locais Esperadas:
  product: O objeto Product
%>

<%# Tenta encontrar o item na lista de desejos (retorna nil se não existir ou não estiver logado) %>
<% wish_item = current_user&.wish_items&.find_by(product: product) %>

<div id="favorite_button_<%= product.id %>" class="relative z-20">
  <% if wish_item %>

    <%# --- ESTADO 1: JÁ FAVORITADO (Botão de Remover) --- %>
    <%= button_to wish_item_path(wish_item), 
          method: :delete, 
          class: "p-2 rounded-full bg-red-50 dark:bg-red-900/20 text-red-600 hover:bg-red-100 dark:hover:bg-red-900/40 transition-colors group",
          form: { data: { turbo: true } } do %>

            <span class="sr-only">Remover dos favoritos</span>
            <svg class="w-6 h-6 transform group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
            </svg>
          <% end %>

  <% else %>

    <%# --- ESTADO 2: NÃO FAVORITADO (Botão de Adicionar) --- %>
    <%= button_to wish_items_path, 
          method: :post, 
          params: { wish_item: { product_id: product.id } }, 
          class: "p-2 rounded-full bg-white dark:bg-zinc-800 text-zinc-400 hover:text-red-500 hover:bg-zinc-100 dark:hover:bg-zinc-700 transition-colors group shadow-sm border border-zinc-200 dark:border-zinc-700",
          form: { data: { turbo: true } } do %>

            <span class="sr-only">Adicionar aos favoritos</span>
            <svg class="w-6 h-6 transform group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          <% end %>

  <% end %>
</div>