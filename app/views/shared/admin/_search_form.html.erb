<div class="mb-6">
  <%= form_with url: url, method: :get, class: "relative", local: true do |f| %>
    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>

    <%= f.text_field :search, 
          value: params[:search], 
          placeholder: placeholder || "Pesquisar...", 
          class: "block w-full p-3 pl-10 text-sm text-white border border-gray-600 rounded-lg bg-gray-700 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400",
          autocomplete: "off" %>

    <% if params[:search].present? %>

      <%= link_to url, class: "absolute right-2.5 bottom-2.5 px-2 py-1 text-xs font-medium text-gray-400 hover:text-white bg-gray-600 rounded hover:bg-gray-500 transition" do %>
        Limpar
      <% end %>

    <% end %>

  <% end %>
</div>