<header class="flex items-center justify-between px-6 py-4 bg-gray-900 border-b border-gray-800">
  <div class="flex items-center gap-4 text-gray-400">
    <button class="hover:text-white transition"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg></button>
    <button class="hover:text-white transition"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
      </svg></button>
  </div>

  <div class="flex items-center gap-3">
    <div class="text-right hidden md:block">
      <p class="text-sm font-medium text-white"><%= current_user.name %></p>
      <p class="text-xs text-gray-500"><%= current_user.profile.capitalize %></p>
    </div>

    <div class="ml-2">
      <%= button_to destroy_user_session_path, method: :delete, class: "text-gray-400 hover:text-white transition" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
      <% end %>
    </div>
  </div>
</header>