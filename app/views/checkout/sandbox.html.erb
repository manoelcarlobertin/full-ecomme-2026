<div class="max-w-md mx-auto mt-10 bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
  <div class="bg-gray-800 p-4">
    <h2 class="text-white font-bold text-xl text-center">Checkout Simulado</h2>
  </div>

  <div class="p-6">
    <p class="text-gray-600 mb-6 text-center">
      Simulação de pagamento para o Pedido <strong>#<%= @order.id %></strong>
    </p>

    <%= turbo_stream_from @order %>

    <button type="button" data-action="click->modal#open" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded transition duration-200 flex items-center justify-center gap-2 shadow-md">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      Pagar Boleto & Ver Recibo
    </button>

  </div>

  <div class="bg-gray-50 p-4 text-xs text-gray-500 text-center border-t">
    Fullstack Rails + Hotwire Demo
  </div>
</div>

<div data-modal-target="backdrop" data-action="click->modal#close" class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm z-40 hidden transition-opacity">
</div>

<div data-modal-target="window" class="fixed inset-0 z-50 flex items-center justify-center p-4 hidden transition-all duration-300 opacity-0 scale-95">

  <div class="bg-white w-full max-w-lg rounded-2xl shadow-2xl overflow-hidden relative">

    <button data-action="click->modal#close" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 p-1">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="p-8">
      <div class="text-center mb-6">
        <div class="mx-auto w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mb-3">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-800">Pagamento Realizado</h2>
        <p class="text-sm text-gray-500">Recibo gerado em <%= l Time.current, format: :short %></p>
      </div>

      <div class="bg-gray-50 rounded-lg p-4 mb-6 border border-gray-100">
        <div class="flex justify-between mb-2">
          <span class="text-xs font-bold text-gray-400 uppercase">Cliente</span>
          <span class="text-sm font-medium text-gray-800"><%= @order.user.email %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-xs font-bold text-gray-400 uppercase">Documento</span>
          <span class="text-sm font-medium text-gray-800"><%= @order.document %></span>
        </div>
      </div>

      <div class="mb-6">
        <h3 class="text-sm font-semibold text-gray-800 mb-3 border-b pb-2">Itens do Pedido</h3>
        <ul class="space-y-3">
          <% @order.order_items.each do |item| %>
          <li class="flex justify-between items-start text-sm">
            <span class="text-gray-600 flex-1 pr-4"><%= item.product.name %></span>
            <span class="text-gray-900 font-mono font-medium"><%= number_to_currency(item.payed_price) %></span>
          </li>
          <% end %>
        </ul>
      </div>

      <div class="border-t border-gray-100 pt-4 flex justify-between items-center">
        <span class="text-lg font-bold text-gray-800">Valor Total</span>
        <span class="text-2xl font-bold text-green-600"><%= number_to_currency(@order.total_amount) %></span>
      </div>
    </div>

    <div class="bg-gray-50 px-8 py-4 flex flex-col sm:flex-row gap-3 justify-end border-t border-gray-100">
      <button data-action="click->modal#close" class="px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-200 font-medium transition text-sm">
        Fechar
      </button>
      <button onclick="window.print()" class="px-6 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-sm transition text-sm flex items-center justify-center gap-2">
        Imprimir
      </button>
    </div>
  </div>
</div>

<script>
  document.addEventListener("turbo:load", () => {
    setupModal();
  });

  document.addEventListener("DOMContentLoaded", () => {
    setupModal();
  });

  function setupModal() {
    // Procura o botão e o modal no HTML que acabamos de colar acima
    const openBtn = document.querySelector('[data-action="click->modal#open"]');
    const closeBtns = document.querySelectorAll('[data-action="click->modal#close"]');
    const modalWindow = document.querySelector('[data-modal-target="window"]');
    const backdrop = document.querySelector('[data-modal-target="backdrop"]');

    if (!openBtn || !modalWindow) {
      console.log("Modal Elements not found!"); // Debug
      return;
    }

    // Função Abrir
    openBtn.addEventListener("click", (e) => {
      e.preventDefault();
      modalWindow.classList.remove("hidden");
      backdrop.classList.remove("hidden");
      // Animação
      setTimeout(() => {
        modalWindow.classList.remove("opacity-0", "scale-95");
        modalWindow.classList.add("opacity-100", "scale-100");
      }, 10);
    });

    // Função Fechar
    const closeModal = (e) => {
      if (e) e.preventDefault();
      modalWindow.classList.remove("opacity-100", "scale-100");
      modalWindow.classList.add("opacity-0", "scale-95");
      setTimeout(() => {
        modalWindow.classList.add("hidden");
        backdrop.classList.add("hidden");
      }, 300);
    };

    closeBtns.forEach(btn => btn.addEventListener("click", closeModal));
    backdrop.addEventListener("click", closeModal);
  }
</script>