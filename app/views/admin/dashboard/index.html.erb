<div class="mb-8">
  <h1 class="text-2xl font-bold">Painel inicial</h1>
  <p class="text-gray-400 text-sm">Dashboard > Painel inicial</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">

  <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 flex items-center">
    <div class="bg-blue-900/50 p-3 rounded-full mr-4 text-blue-400">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
      </svg>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-white"><%= @dashboard[:users_count] %></h3>
      <p class="text-gray-400 text-sm">Clientes</p>
    </div>
  </div>

  <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 flex items-center">
    <div class="bg-purple-900/50 p-3 rounded-full mr-4 text-purple-400">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-white"><%= @dashboard[:products_count] %></h3>
      <p class="text-gray-400 text-sm">Produtos</p>
    </div>
  </div>

  <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 flex items-center">
    <div class="bg-green-900/50 p-3 rounded-full mr-4 text-green-400">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
      </svg>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-white"><%= @dashboard[:categories_count] %></h3>
      <p class="text-gray-400 text-sm">Categorias</p>
    </div>
  </div>

  <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 flex items-center">
    <div class="bg-yellow-900/50 p-3 rounded-full mr-4 text-yellow-400">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-white">
        <%= number_to_currency(@dashboard[:total_revenue], unit: "R$ ", separator: ",", delimiter: ".") %>
      </h3>
      <p class="text-gray-400 text-sm">Receita Total</p>
    </div>
  </div>

</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2 bg-gray-800 p-6 rounded-lg border border-gray-700">
    <h3 class="text-lg font-semibold mb-4">Produtos vendidos</h3>
    <canvas id="salesChart" class="w-full h-64"></canvas>
  </div>

  <div class="bg-gray-800 p-6 rounded-lg border border-gray-700">
    <h3 class="text-lg font-semibold mb-4">Top 5 mais vendidos</h3>
    <ul class="space-y-4">
      <li class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= image_tag "product_image.png", class: "w-10 h-10 rounded" %>
          <span>Cuphead</span>
        </div>
        <span class="text-gray-300 font-mono">R$ 1.152,56</span>
      </li>
    </ul>
  </div>
</div>