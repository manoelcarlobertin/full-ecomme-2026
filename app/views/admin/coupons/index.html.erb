<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-white">Cupons</h1>
      <p class="text-gray-400 text-sm mt-1">Gerencie códigos promocionais e descontos</p>
    </div>

    <%= link_to "+ Novo Cupom", new_admin_coupon_path, class: "btn-primary shadow-lg shadow-blue-900/50" %>
  </div>

  <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden shadow-xl">
    <div class="overflow-x-auto">
      <table class="w-full text-left text-sm text-gray-400">
        <thead class="bg-gray-900 text-gray-200 uppercase font-medium">
          <tr>
            <th scope="col" class="px-6 py-4">Nome / Código</th>
            <th scope="col" class="px-6 py-4">Status</th>
            <th scope="col" class="px-6 py-4">Desconto</th>
            <th scope="col" class="px-6 py-4">Validade</th>
            <th scope="col" class="px-6 py-4 text-right">Ações</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-700">
          <% if @coupons.any? %>
            <%= render @coupons %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center text-gray-500 italic">
                Nenhum cupom cadastrado.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>