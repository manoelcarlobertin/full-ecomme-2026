<tr class="hover:bg-gray-700/50 transition duration-150 ease-in-out group">
  <td class="px-6 py-4">
    <div class="font-medium text-white"><%= coupon.name %></div>
    <div class="text-xs font-mono text-blue-400 bg-blue-900/20 px-2 py-0.5 rounded w-fit mt-1">
      <%= coupon.code %>
    </div>
  </td>

  <td class="px-6 py-4">
    <% if coupon.active? %>
      <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/30 text-green-400 border border-green-900">
        <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span> Ativo
      </span>
    <% else %>
      <span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-900">
        <span class="w-1.5 h-1.5 rounded-full bg-red-400"></span> Inativo
      </span>
    <% end %>
  </td>

  <td class="px-6 py-4 font-mono text-white">
    R$ <%= number_to_currency(coupon.discount_value, unit: "", separator: ",", delimiter: ".") %>
  </td>

  <td class="px-6 py-4">
    <div class="<%= coupon.due_date < Time.current ? 'text-red-400 font-bold' : '' %>">
      <%= l(coupon.due_date, format: :short) %>
    </div>
    <% if coupon.due_date < Time.current %>
      <span class="text-xs text-red-500">Vencido</span>
    <% end %>
  </td>

  <td class="px-6 py-4 text-right">
    <div class="flex justify-end gap-3 opacity-0 group-hover:opacity-100 transition-opacity">
      <%= link_to edit_admin_coupon_path(coupon), class: "p-2 rounded hover:bg-blue-600/20 text-blue-400 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>

      <%= button_to admin_coupon_path(coupon), method: :delete, class: "p-2 rounded hover:bg-red-600/20 text-red-400 transition", form: { data: { turbo_confirm: "Tem certeza?" } } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </td>
</tr>