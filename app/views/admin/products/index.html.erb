<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-white">Produtos</h1>
      <p class="text-gray-400 text-sm mt-1">Gerencie seu catálogo de jogos</p>
    </div>

    <%= link_to "+ Novo Produto", new_admin_product_path, class: "btn-primary shadow-lg shadow-blue-900/50" %>
  </div>

  <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden shadow-xl">
    <div class="overflow-x-auto">
      <%= render "shared/admin/search_form", url: admin_products_path, placeholder: "Buscar produto por nome..." %>
      <table class="w-full text-left text-sm text-gray-400">
        <thead class="bg-gray-900 text-gray-200 uppercase font-medium">
          <tr>
            <th scope="col" class="px-6 py-4">Produto</th>
            <th scope="col" class="px-6 py-4">Categorias</th>
            <th scope="col" class="px-6 py-4">Preço</th>
            <th scope="col" class="px-6 py-4">Status</th>
            <th scope="col" class="px-6 py-4 text-right">Ações</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-700">
          <% if @products.any? %>
          <%= render @products %>
          <% else %>
          <tr>
            <td colspan="5" class="px-6 py-12 text-center text-gray-500 italic">
              <div class="flex flex-col items-center">
                <svg class="w-12 h-12 mb-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                Nenhum produto cadastrado ainda.
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>