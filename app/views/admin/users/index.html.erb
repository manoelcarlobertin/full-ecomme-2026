<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-white">Usuários</h1>
      <p class="text-gray-400 text-sm mt-1">Gerencie o acesso e permissões do sistema</p>
    </div>

    <%= link_to "+ Novo Usuário", new_admin_user_path, class: "btn-primary shadow-lg shadow-blue-900/50" %>
  </div>

  <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden shadow-xl">
    <div class="overflow-x-auto">
      <%= render "shared/admin/search_form", url: admin_users_path, placeholder: "Buscar usuário por nome ou email..." %>
      <table class="w-full text-left text-sm text-gray-400">
        <thead class="bg-gray-900 text-gray-200 uppercase font-medium">
          <tr>
            <th scope="col" class="px-6 py-4">ID</th>
            <th scope="col" class="px-6 py-4">Nome</th>
            <th scope="col" class="px-6 py-4">Email</th>
            <th scope="col" class="px-6 py-4">Perfil</th>
            <th scope="col" class="px-6 py-4 text-right">Ações</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-700">
          <% if @users.any? %>
            <%= render @users %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center text-gray-500 italic">
                Nenhum usuário encontrado.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="bg-gray-800 px-6 py-4 border-t border-gray-700 text-xs text-gray-500 flex justify-between">
      <span>Total de <%= @users.count %> usuários</span>
    </div>
  </div>
</div>