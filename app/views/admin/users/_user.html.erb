<tr id="<%= dom_id user %>" class="hover:bg-gray-700/50 transition duration-150 ease-in-out group">

  <td class="px-6 py-4 font-mono text-gray-500">
    #<%= user.id %>
  </td>

  <td class="px-6 py-4 font-medium text-white">
    <%= user.name %>
    <% if user == current_user %>
      <span class="ml-2 text-xs text-green-400 border border-green-900 bg-green-900/30 px-1.5 py-0.5 rounded">(Você)</span>
    <% end %>
  </td>

  <td class="px-6 py-4 text-gray-300">
    <%= user.email %>
  </td>

  <td class="px-6 py-4">
    <% if user.admin? %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-900/50 text-purple-400 border border-purple-800">
        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        Admin
      </span>
    <% else %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900/30 text-blue-400 border border-blue-800">
        Cliente
      </span>
    <% end %>
  </td>

  <td class="px-6 py-4 text-right">
    <div class="flex justify-end gap-3 opacity-0 group-hover:opacity-100 transition-opacity">

      <%= link_to edit_admin_user_path(user), class: "p-2 rounded hover:bg-blue-600/20 text-blue-400 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>

      <% if user != current_user %>
          <%= button_to admin_user_path(user), 
          method: :delete, 
          class: "p-2 rounded hover:bg-red-600/20 text-red-400 transition",
          form: { data: { turbo_confirm: "Tem certeza que deseja remover o usuário #{user.name}?" } } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          <% end %>
      <% else %>
        <div class="w-9 h-9"></div>
      <% end %>

    </div>
  </td>
</tr>