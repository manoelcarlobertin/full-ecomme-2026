<div class="bg-gray-800 border border-gray-700 rounded-lg shadow-lg p-6">

  <%= simple_form_for [:admin, category], html: { class: "space-y-6" } do |f| %>

    <% if category.errors.any? %>
      <div class="bg-red-900/50 border border-red-800 text-red-200 px-4 py-3 rounded mb-4 text-sm">
        <strong class="font-bold">Ops! Encontramos erros:</strong>
        <ul class="list-disc list-inside mt-1">
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">
      <%= f.input :name, 
            label: "Nome da Categoria",
            label_html: { class: "block text-sm font-medium text-gray-300 mb-2" },
            input_html: { 
              class: "w-full bg-gray-900 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 placeholder-gray-500",
              placeholder: "Ex: Ação, RPG, Estratégia..." 
            },
            wrapper_html: { class: "w-full" } 
        %>
    </div>

    <div class="flex justify-end items-center gap-3 pt-6 border-t border-gray-700">

      <%= link_to "Cancelar", admin_categories_path, class: "text-gray-300 bg-transparent border border-gray-600 hover:bg-gray-700 font-medium rounded-lg text-sm px-5 py-2.5 transition" %>

      <%= f.button :submit, class: "text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 cursor-pointer transition shadow-lg shadow-blue-900/50" %>
    </div>

  <% end %>
</div>